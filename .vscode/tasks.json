{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build drift-daemon",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/drift-daemon/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["configure drift-daemon"]
        },
        {
            "label": "configure drift-daemon",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}/drift-daemon",
                "-B", "${workspaceFolder}/drift-daemon/build"
            ],
            "problemMatcher": []
        }
    ]
}
