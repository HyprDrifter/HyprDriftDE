{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug drift-daemon (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/drift-daemon/build/drift-daemon",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/drift-daemon",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build drift-daemon",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
